{
  "extends": [
    "../tsconfig.shared.json"
  ],
  "compilerOptions": {
    // Project Structure
    "declarationDir": "dist/types",
    "rootDir": ".",
    "outDir": "dist",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.stories.js",
    "src/**/*.stories.ts"
  ],
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts"
  ]
}
