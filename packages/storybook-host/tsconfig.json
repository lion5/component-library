{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@core/*": [
        "../core/src/*"
      ],
      "@firebase/*": [
        "../firebase/src/*"
      ],
      "@/*": [
        "../gridstack/src/*"
      ],
      "@leaflet/*": [
        "../leaflet/src/*"
      ]
    },
    "types": [
      "vite/client",
      "dom-screen-wake-lock"
    ]
  },
  "exclude": [
    "**/node_modules",
    "dist"
  ],
  "include": [
    "../../**/*.stories.js",
    "../../**/*.stories.ts",
    "vite.config.mts"
  ]
}
